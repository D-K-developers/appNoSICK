<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/covid1"
    tools:context=".CovidFragment1">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Коронавирус"
        android:textColor="#23EA00"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/covidvirus" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_horizontal"
            android:text="Что такое коронавирус?"
            android:textColor="#23EA00"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_horizontal"
            android:text="Коронавирус - возбудитель ОРВИ, при котором отмечается интоксикация организма и проблемы с дыхательной и пищеварительной системами"
            android:textColor="#23EA00"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/green_circle"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/green_circle_empty"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/green_circle_empty"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/linear"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="472dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#DA5C00F1"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="Но чаще всего от 2 до 7 суток"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="От 2 до 14 дней"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="Контактным путем"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="Воздушно-пылевым"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="Воздушно-капельным путем"
                android:textColor="@color/covid1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Вирус передается:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="Инкубационный период"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>